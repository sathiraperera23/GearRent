<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.equipment.EquipmentController">

    <top>
        <ToolBar>
            <Button text="â¬… Back"
                    onAction="#backToDashboard"/>

            <Separator/>

            <Button text="Add" onAction="#btnAddOnAction"/>
            <Button text="Update" onAction="#btnUpdateOnAction"/>
            <Button text="Delete" onAction="#btnDeleteOnAction"/>
            <Button text="Clear" onAction="#btnClearOnAction"/>
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="tblEquipment">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="70"/>
                <TableColumn fx:id="colCode" text="Code" prefWidth="100"/>
                <TableColumn fx:id="colBrand" text="Brand" prefWidth="120"/>
                <TableColumn fx:id="colModel" text="Model" prefWidth="120"/>
                <TableColumn fx:id="colPrice" text="Daily Price" prefWidth="100"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Equipment ID"/>
            <TextField fx:id="txtEquipmentId" GridPane.columnIndex="1"/>

            <Label text="Category ID" GridPane.rowIndex="1"/>
            <TextField fx:id="txtCategoryId" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Branch ID" GridPane.rowIndex="2"/>
            <TextField fx:id="txtBranchId" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Code" GridPane.rowIndex="3"/>
            <TextField fx:id="txtCode" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Brand" GridPane.rowIndex="4"/>
            <TextField fx:id="txtBrand" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Model" GridPane.rowIndex="5"/>
            <TextField fx:id="txtModel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Purchase Year" GridPane.rowIndex="6"/>
            <TextField fx:id="txtYear" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Daily Price" GridPane.rowIndex="7"/>
            <TextField fx:id="txtDailyPrice" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

            <Label text="Deposit" GridPane.rowIndex="8"/>
            <TextField fx:id="txtDeposit" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

            <Label text="Status" GridPane.rowIndex="9"/>
            <ComboBox fx:id="cmbStatus" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
        </GridPane>
    </bottom>

</BorderPane>
