<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.dashboard.DashboardController">

    <!-- ===================== TOP ===================== -->
    <top>
        <Label fx:id="lblWelcome"
               text="Equipment Rental Management System"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 15;" />
    </top>

    <!-- ===================== LEFT MENU ===================== -->
    <left>
        <VBox spacing="10"
              style="-fx-padding: 15; -fx-background-color: #F4F4F4;">

            <Label text="Dashboard"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <Button text="Customers"
                    onAction="#openCustomers"
                    prefHeight="40"/>

            <Button text="Equipment"
                    onAction="#openEquipment"
                    prefHeight="40"/>

            <Button text="Reservations"
                    onAction="#openReservations"
                    prefHeight="40"/>

            <Button text="Rentals"
                    onAction="#openRentals"
                    prefHeight="40"/>

            <Button text="Reports"
                    onAction="#openReports"
                    prefHeight="40"/>

            <Button text="Logout"
                    onAction="#logout"
                    prefHeight="40"
                    style="-fx-background-color: #E57373; -fx-text-fill: white;"/>

        </VBox>
    </left>

    <!-- ===================== CENTER CONTENT ===================== -->
    <center>
        <AnchorPane fx:id="contentPane"
                    style="-fx-background-color: white;" />
    </center>

</BorderPane>
