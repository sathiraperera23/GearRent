<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="1100" prefHeight="650"
            xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.rental.RentalController">

    <!-- Back Button -->
    <Button text="â¬… Back" layoutX="20" layoutY="10" onAction="#backToDashboard"/>

    <!-- Table -->
    <TableView fx:id="tblRental" layoutX="20" layoutY="50" prefWidth="1060" prefHeight="250">
        <columns>
            <TableColumn fx:id="colId" text="Rental ID" prefWidth="100"/>
            <TableColumn fx:id="colCustomer" text="Customer ID" prefWidth="120"/>
            <TableColumn fx:id="colEquipment" text="Equipment ID" prefWidth="120"/>
            <TableColumn fx:id="colFrom" text="Rented From" prefWidth="150"/>
            <TableColumn fx:id="colTo" text="Rented To" prefWidth="150"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
            <TableColumn fx:id="colFinalAmount" text="Final Amount" prefWidth="140"/>
            <TableColumn fx:id="colPaymentStatus" text="Payment Status" prefWidth="160"/>
        </columns>
    </TableView>

    <!-- Form -->
    <GridPane layoutX="20" layoutY="320" hgap="15" vgap="12" prefWidth="1060">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="150"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="300"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="150"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="300"/>
        </columnConstraints>

        <Label text="Rental ID" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtRentalId" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Customer ID" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCustomerId" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Equipment ID" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEquipmentId" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Rented From" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpFrom" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Rented To" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpTo" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Daily Price" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <TextField fx:id="txtDailyPrice" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

        <Label text="Security Deposit" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
        <TextField fx:id="txtDeposit" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

        <Label text="Status" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
        <ComboBox fx:id="cmbStatus" prefWidth="150" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

        <Label text="Payment Status" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
        <ComboBox fx:id="cmbPayment" prefWidth="150" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
    </GridPane>

    <!-- Action Buttons -->
    <HBox spacing="20" layoutX="400" layoutY="580" alignment="CENTER">
        <Button text="Add" onAction="#btnAddOnAction" prefWidth="100"/>
        <Button text="Update" onAction="#btnUpdateOnAction" prefWidth="100"/>
        <Button text="Clear" onAction="#btnClearOnAction" prefWidth="100"/>
    </HBox>

</AnchorPane>