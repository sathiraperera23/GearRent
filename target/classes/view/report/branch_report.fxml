<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.report.BranchReportController"
            prefWidth="600" prefHeight="360">

    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <TextField fx:id="txtFilter" promptText="Search by Code/Name"/>
            <DatePicker fx:id="dpStartDate" promptText="Start Date"/>
            <DatePicker fx:id="dpEndDate" promptText="End Date"/>
            <Button text="Search" onAction="#searchBranches"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tblBranches" prefHeight="300">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colCode" text="Code" prefWidth="100"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                <TableColumn fx:id="colAddress" text="Address" prefWidth="150"/>
                <TableColumn fx:id="colContact" text="Contact" prefWidth="100"/>
                <TableColumn fx:id="colCreatedAt" text="Created At" prefWidth="150"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
