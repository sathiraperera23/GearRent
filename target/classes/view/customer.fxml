<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.customer.CustomerController">

    <!-- ===================== TOP ===================== -->
    <top>
        <ToolBar>
            <Button text="Add" onAction="#btnAddOnAction"/>
            <Button text="Update" onAction="#btnUpdateOnAction"/>
            <Button text="Delete" onAction="#btnDeleteOnAction"/>
            <Button text="Clear" onAction="#btnClearOnAction"/>
        </ToolBar>
    </top>

    <!-- ===================== CENTER ===================== -->
    <center>
        <TableView fx:id="tblCustomers">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                <TableColumn fx:id="colNic" text="NIC / Passport" prefWidth="140"/>
                <TableColumn fx:id="colContact" text="Contact" prefWidth="120"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
                <TableColumn fx:id="colMembership" text="Membership" prefWidth="120"/>
            </columns>
        </TableView>
    </center>

    <!-- ===================== BOTTOM ===================== -->
    <!-- ===================== BOTTOM ===================== -->
    <bottom>
        <GridPane hgap="10" vgap="10">

            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Customer ID"/>
            <TextField fx:id="txtCustomerId" GridPane.columnIndex="1"/>

            <Label text="Name" GridPane.rowIndex="1"/>
            <TextField fx:id="txtName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="NIC / Passport" GridPane.rowIndex="2"/>
            <TextField fx:id="txtNic" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Contact No" GridPane.rowIndex="3"/>
            <TextField fx:id="txtContact" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Email" GridPane.rowIndex="4"/>
            <TextField fx:id="txtEmail" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Address" GridPane.rowIndex="5"/>
            <TextField fx:id="txtAddress" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Membership" GridPane.rowIndex="6"/>
            <ComboBox fx:id="cmbMembership"
                      GridPane.rowIndex="6"
                      GridPane.columnIndex="1"/>
        </GridPane>
    </bottom>

</BorderPane>
