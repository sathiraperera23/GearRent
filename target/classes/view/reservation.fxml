<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/13"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.reservation.ReservationController">


<top>
        <ToolBar>
            <Button text="Add" onAction="#addReservation"/>
            <Button text="Update" onAction="#updateReservation"/>
            <Button text="Delete" onAction="#deleteReservation"/>
            <Separator/>
            <Button text="Confirm" fx:id="btnConfirm" onAction="#confirmReservation"/>
            <Button text="Cancel" fx:id="btnCancel" onAction="#cancelReservation"/>
            <Button text="Create Rental" fx:id="btnCreateRental" onAction="#createRental"/>
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="tblReservation">
            <columns>
                <TableColumn fx:id="colId" text="ID"/>
                <TableColumn fx:id="colCustomer" text="Customer"/>
                <TableColumn fx:id="colEquipment" text="Equipment"/>
                <TableColumn fx:id="colFrom" text="From"/>
                <TableColumn fx:id="colTo" text="To"/>
                <TableColumn fx:id="colTotal" text="Total"/>
                <TableColumn fx:id="colStatus" text="Status"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Reservation ID" GridPane.rowIndex="0"/>
            <TextField fx:id="txtReservationId" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Customer ID" GridPane.rowIndex="1"/>
            <TextField fx:id="txtCustomerId" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Equipment ID" GridPane.rowIndex="2"/>
            <TextField fx:id="txtEquipmentId" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="From" GridPane.rowIndex="3"/>
            <DatePicker fx:id="dpFrom" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="To" GridPane.rowIndex="4"/>
            <DatePicker fx:id="dpTo" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Total Price" GridPane.rowIndex="5"/>
            <TextField fx:id="txtTotalPrice" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>
    </bottom>

</BorderPane>
