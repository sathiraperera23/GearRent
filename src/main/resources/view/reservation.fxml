<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.reservation.ReservationController">

    <!-- ===================== TOP ===================== -->
    <top>
        <ToolBar>
            <Button text="Add" onAction="#addReservation"/>
            <Button text="Update" onAction="#updateReservation"/>
            <Button text="Delete" onAction="#deleteReservation"/>
            <Separator/>
            <Button fx:id="btnConfirm" text="Confirm" onAction="#confirmReservation"/>
            <Button fx:id="btnCancel" text="Cancel" onAction="#cancelReservation"/>
            <Button fx:id="btnCreateRental" text="Create Rental" onAction="#createRental"/>
        </ToolBar>
    </top>

    <!-- ===================== CENTER ===================== -->
    <center>
        <TableView fx:id="tblReservation">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                <TableColumn fx:id="colCustomer" text="Customer" prefWidth="100"/>
                <TableColumn fx:id="colEquipment" text="Equipment" prefWidth="100"/>
                <TableColumn fx:id="colFrom" text="From" prefWidth="100"/>
                <TableColumn fx:id="colTo" text="To" prefWidth="100"/>
                <TableColumn fx:id="colTotal" text="Total" prefWidth="120"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <!-- ===================== BOTTOM ===================== -->
    <bottom>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Reservation ID"/>
            <TextField fx:id="txtReservationId" editable="false" GridPane.columnIndex="1"/>

            <Label text="Customer ID" GridPane.rowIndex="1"/>
            <TextField fx:id="txtCustomerId" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Equipment ID" GridPane.rowIndex="2"/>
            <TextField fx:id="txtEquipmentId" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="From" GridPane.rowIndex="3"/>
            <DatePicker fx:id="dpFrom" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="To" GridPane.rowIndex="4"/>
            <DatePicker fx:id="dpTo" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Total Price" GridPane.rowIndex="5"/>
            <TextField fx:id="txtTotalPrice" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>
    </bottom>

</BorderPane>
